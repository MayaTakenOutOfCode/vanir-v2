generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  //directUrl         = env("POSTGRES_URL_NON_POOLING")
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
}

model Users{
    id          Int @id() @default(autoincrement())
    email       String
    password    String
    isAdmin     Boolean @default(false)
}

model Teams{
    id          Int @id() @default(autoincrement())
    name        String
    description String
    imageSRC    String
}

model Tourneys{
    id          Int @id() @default(autoincrement())
    name        String
    description String
    imageSRC    String
}